{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run C++",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "g++ \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiles and runs current C++ file"
        }
    ]
}
